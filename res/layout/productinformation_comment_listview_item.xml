<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/productinformation_comment_contain_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaa" />

    <TextView
        android:id="@+id/productinformation_comment_color_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/productinformation_comment_contain_textView"
        android:layout_marginTop="16dp"
        android:text="bbb" />

    <TextView
        android:id="@+id/productinformation_comment_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/productinformation_comment_color_textView"
        android:layout_alignBottom="@+id/productinformation_comment_color_textView"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/productinformation_comment_color_textView"
        android:text="ccc" />

    <TextView
        android:id="@+id/productinformation_comment_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productinformation_comment_color_textView"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/textView2"
        android:text="ddd" />

    <TextView
        android:id="@+id/productinformation_comment_size_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/productinformation_comment_date_textView"
        android:layout_marginRight="41dp"
        android:text="ffffffff" />

</RelativeLayout>
