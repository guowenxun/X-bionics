<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/title_back"
                android:gravity="center"
                android:text="@string/classify_search"
                android:textSize="25dp" />

            <Button
                android:id="@+id/classifyandsearch_drawerlist_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/listbutton" />

            <Button
                android:id="@+id/classifyandsearch_search_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/seek" />
        </RelativeLayout>
              
    </FrameLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/chassifyandseatch_sort_button" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sortbutton"/>
        
        <Button 
            android:id="@+id/chassifyandseatch_filtering_button" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/filteringbutton"/>
        
    </LinearLayout>
    
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent">
        
        <GridView 
            android:id="@+id/classifyandsearch_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"/>
        
        
    </LinearLayout>
    

</LinearLayout>
